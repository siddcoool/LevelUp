{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",               // ✅ CommonJS output
    "moduleResolution": "node",         // ✅ Node-style resolution
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,            // ✅ allows import express from "express"
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  }
}
